    }
  ],
  "version": "dev-develop",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.3.0",
    "ext-json": "*",
    "atk4/core": "dev-develop",
    "atk4/data": "dev-develop"
  },
  "require-release": {
    "php": ">=7.3.0",
    "ext-json": "*",
    "atk4/core": "^2.2.0",
    "atk4/data": "^2.2.0"
  },
  "require-dev": {
    "behat/behat": "^3.4",
    "behat/mink-extension": "^2.2",
    "behat/mink-selenium2-driver": "^1.3",
    "friendsofphp/php-cs-fixer": "^2.16",
    "fzaninotto/faker": "*",
    "guzzlehttp/guzzle": "^6.3",
    "phpunit/phpcov": "*",
    "phpunit/phpunit": ">=9.3",
    "symfony/process": "^4.3 || ^5.0"
  },
  "autoload": {
    "psr-4": {
      "atk4\\ui\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "atk4\\ui\\tests\\": "tests/",
      "atk4\\ui\\behat\\": "tests-behat/bootstrap/"
    }
  }
}
