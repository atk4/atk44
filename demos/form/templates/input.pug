| {LabeledGroup}
div(class="{$field_class} field atk-form-group")
    label {$label}
    div(class="{$width} {$class} fields")
        | {$Content}
    | {$Hint}
| {/}

| {NoLabelGroup}
div(class="{$field_class} field atk-form-group")
    div(class="{$width} {$class} fields")
        | {$Content}
| {/}

| {InputField}
div(class="{$field_class} field")
        label(for="{$label_for}") {$label}
            span(style="float: right") {$Hint}
        | {$Input}
| {/}

| {InputNoLabel}
div(class="{$field_class} field no-label")
    | {$Input}{$Hint}
| {/}
